@using Demo.DAL.Models
@model Department;
@{
    ViewData["Title"] = "Create Department";
}

<div class="container mt-5">
    <h2 class="mb-4">Create Department</h2>

    <form asp-action="Create" method="post" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DateOfCreation" class="form-label"></label>
            <input asp-for="DateOfCreation" class="form-control" type="datetime-local" />
            <span asp-validation-for="DateOfCreation" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Submit</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
