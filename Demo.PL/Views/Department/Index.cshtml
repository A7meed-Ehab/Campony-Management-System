@using Demo.DAL.Models
@model IEnumerable<Department>

@{
    ViewData["Title"] = "Departments Index";
}

<h1>Departments</h1>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">Date Of Creation</th>
            <th scope="col">Edit</th>
            <th scope="col">Details</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Code</td>
                <td>@department.Name</td>
                <td>@department.DateOfCreation.ToString("yyyy-MM-dd")</td>
                <partial name="_ButtonsPartial" model="@department.Id"></partial>
            </tr>
        }
    </tbody>
</table>
<a asp-action="create" class="btn btn-sm btn-primary">Create New Department</a>
