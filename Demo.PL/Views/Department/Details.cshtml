@using Demo.DAL.Models
@model Department;
@{
    ViewData["Title"] = "Create Department";
}
<div class="container mt-5">
    <h2 class="mb-4">Detials</h2>
    <form asp-action="Details" method="Get" class="needs-validation" novalidate>
        <div class="form-group">
            <label asp-for="Code" class="form-label"></label>
            <input asp-for="Code" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label asp-for="DateOfCreation" class="form-label"></label>
            <input asp-for="DateOfCreation" class="form-control" type="datetime-local" readonly />
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary mt-3">Back To Home</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mt-3">Delete</a>
        </div>

    </form>
</div>