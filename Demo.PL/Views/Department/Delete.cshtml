@using Demo.DAL.Models
@model Department;
@{
    ViewData["Title"] = "Delete Department";
}

<div class="container mt-5">
    <h2 class="mb-4 text-danger">Delete Department</h2>

    <p>Are you sure you want to delete this department?</p>

        <label class="form-label"><strong>Code:</strong></label>
        <p class="form-control-plaintext">@Model.Code</p>
    </div>

    <div class="form-group">
        <label class="form-label"><strong>Name:</strong></label>
        <p class="form-control-plaintext">@Model.Name</p>
    </div>

    <div class="form-group">
        <label class="form-label"><strong>Date of Creation:</strong></label>
        <p class="form-control-plaintext">@Model.DateOfCreation.ToString("yyyy-MM-dd HH:mm")</p>
    </div>
    <form asp-action="Delete" method="post">

    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <button type="submit" asp-action="Delete" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
